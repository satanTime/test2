{
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":semanticCommitTypeAll(chore)"
  ],
  "baseBranches": ["main"],
  "dependencyDashboard": false,
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "rangeStrategy": "pin",
  "rebaseWhen": "conflicted",
  "separateMajorMinor": true,
  "separateMinorPatch": true,
  "separateMultipleMajor": true,
  "forkProcessing": "disabled",
  "ignoreDeprecated": false,
  "configMigration": true,
  "vulnerabilityAlerts": {
    "enabled": false
  },
  "hostRules": [
    {
      "matchHost": "docker.io",
      "username": "satantime",
      "password": "dckr_pat_aLRNk3vH9pYc1EtJgrHdOntl4Fs"
    }
  ],
  "packageRules": [
    {
      "matchPackageNames": ["satantime/test"],
      "extractVersion": "^stable-version-(?<version>.*)$"
    },
    {
      "matchPackageNames": [
        "satantime/test",
        "@types/node",
        "nodejs/node"
      ],
      "allowedVersions": "/<21.0.0/",
      "branchTopic": "node-{{{newMajor}}}{{#if separateMinorPatch}}{{#if isPatch}}.{{{newMinor}}}{{/if}}{{/if}}.x{{#if isLockfileUpdate}}-lockfile{{/if}}"
    }
  ]
}
